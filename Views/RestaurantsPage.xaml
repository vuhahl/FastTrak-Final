<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastTrak.Views.RestaurantsPage"
             xmlns:models="clr-namespace:FastTrak.Models"
             xmlns:viewmodels="clr-namespace:FastTrak.ViewModels"
             xmlns:admob="clr-namespace:Plugin.MauiMTAdmob.Controls;assembly=Plugin.MauiMTAdmob"
             x:DataType="viewmodels:RestaurantsViewModel"
             Title="Restaurants"
             BackgroundColor="#F8F9FA">

    <Grid RowDefinitions="*,Auto" RowSpacing="0">

        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Header -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Select Restaurant"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#1A1A1A" />
                    <Label Text="Choose from our top chain restaurants"
                           FontSize="14"
                           TextColor="#6B7280" />
                </VerticalStackLayout>

                <!-- Restaurant List -->
                <VerticalStackLayout Spacing="12">
                    <CollectionView x:Name="RestaurantsCollectionView"
                                    ItemsSource="{Binding Restaurants}"
                                    SelectionMode="Single"
                                    SelectionChanged="RestaurantsCollectionView_SelectionChanged">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Restaurant">
                                <Border BackgroundColor="White"
                                        StrokeThickness="0"
                                        Padding="20">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <Border.Shadow>
                                        <Shadow Brush="Black"
                                                Opacity="0.06"
                                                Radius="6"
                                                Offset="0,2"/>
                                    </Border.Shadow>

                                    <Grid ColumnDefinitions="*,Auto">
                                        <VerticalStackLayout Grid.Column="0" 
                                                           Spacing="4"
                                                           VerticalOptions="Center">
                                            <Label Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="#1A1A1A"/>
                                            <Label Text="View menu"
                                                   FontSize="14"
                                                   TextColor="#6B7280"/>
                                        </VerticalStackLayout>

                                        <Label Grid.Column="1"
                                               Text="â€º"
                                               FontSize="32"
                                               TextColor="#D1D5DB"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Quick Start Guide -->
                <Border BackgroundColor="#EFF6FF"
                        StrokeThickness="0"
                        Padding="20"
                        Margin="0,4,0,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>

                    <VerticalStackLayout Spacing="12">
                        <Label Text="Quick Start Guide"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="#1E40AF"/>

                        <VerticalStackLayout Spacing="8">
                            <Label TextColor="#1E40AF" FontSize="14">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="1. " FontAttributes="Bold"/>
                                        <Span Text="Select a restaurant from the list above"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label TextColor="#1E40AF" FontSize="14">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="2. " FontAttributes="Bold"/>
                                        <Span Text="Browse the menu and add items to your tray"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <Label TextColor="#1E40AF" FontSize="14">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="3. " FontAttributes="Bold"/>
                                        <Span Text="View your nutritional totals in My Tray"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Bottom spacing for ad -->
                <BoxView HeightRequest="8" Color="Transparent"/>

            </VerticalStackLayout>
        </ScrollView>

        <!-- AdMob Banner -->
        <admob:MTAdView Grid.Row="1"
                       AdsId="ca-app-pub-3940256099942544/6300978111"
                       HeightRequest="50"
                       HorizontalOptions="FillAndExpand"
                       VerticalOptions="End"
                       BackgroundColor="White"
                       Margin="0"/>

    </Grid>
</ContentPage>