<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastTrak.Views.HomePage"
             Title="HomePage">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto"
          Padding="24"
          RowSpacing="20">

        <ScrollView>
            <Grid RowDefinitions="Auto, Auto, Auto, Auto, *"
              Padding="24"
              RowSpacing="20">

                <!-- App Title -->
                <VerticalStackLayout Grid.Row="0" Spacing="4">
                    <Label Text="FastTrak"
                       FontSize="36"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}" />

                    <Label Text="Track fast-food nutrition in seconds."
                       FontSize="15"
                       TextColor="{StaticResource TextSecondaryColor}" />
                </VerticalStackLayout>

                <!-- Nutritional Summary Panel -->
                <Frame BackgroundColor="{StaticResource PrimaryColor}"
                   CornerRadius="20"
                   Padding="20"
                   HasShadow="False">

                    <VerticalStackLayout Spacing="12">
                        <Label Text="Nutritional Summary"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold" />

                        <Grid ColumnDefinitions="*,*,*,*"
                          RowDefinitions="Auto">

                            <VerticalStackLayout Grid.Column="0" Spacing="2">
                                <Label Text="{Binding TotalCalories}"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold" />
                                <Label Text="Calories"
                                   TextColor="White"
                                   FontSize="12" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                <Label Text="{Binding TotalProtein}"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold" />
                                <Label Text="Protein"
                                   TextColor="White"
                                   FontSize="12" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                <Label Text="{Binding TotalCarbs}"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold" />
                                <Label Text="Carbs"
                                   TextColor="White"
                                   FontSize="12" />
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="3" Spacing="2">
                                <Label Text="{Binding TotalFat}"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold" />
                                <Label Text="Fat"
                                   TextColor="White"
                                   FontSize="12" />
                            </VerticalStackLayout>
                        </Grid>

                        <BoxView HeightRequest="1"
                             Color="#FFFFFF55"
                             Margin="0,8,0,0" />

                        <Label Text="{Binding TodayItemCount, StringFormat='Total Items: {0}'}"
                           TextColor="White"
                           FontSize="13" />
                    </VerticalStackLayout>
                </Frame>

                <!-- My Tray Items header -->
                <Label Text="My Tray Items"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextPrimaryColor}" />

                <!-- Tray Items list -->
                <CollectionView ItemsSource="{Binding TodayLoggedItems}">
                    <CollectionView.EmptyView>
                        <Frame Padding="16"
                           CornerRadius="16"
                           BackgroundColor="{StaticResource SurfaceColor}">
                            <Label Text="No items in your tray yet. Add items from Restaurants or FatSecret."
                               TextColor="{StaticResource TextSecondaryColor}" />
                        </Frame>
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Margin="0,6"
                               Padding="14"
                               CornerRadius="16"
                               BackgroundColor="{StaticResource SurfaceColor}"
                               HasShadow="False">

                                <VerticalStackLayout Spacing="8">

                                    <!-- Top row: name + delete icon -->
                                    <Grid ColumnDefinitions="*,Auto">
                                        <Label Text="{Binding DisplayName}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource TextPrimaryColor}" />

                                        <ImageButton Grid.Column="1"
                                                 Source="trash_icon.png"
                                                 BackgroundColor="Transparent"
                                                 Command="{Binding BindingContext.DeleteLoggedItemCommand, Source={x:Reference Name=HomePageRoot}}"
                                                 CommandParameter="{Binding .}" />
                                    </Grid>

                                    <!-- Quantity controls -->
                                    <Grid ColumnDefinitions="Auto,Auto,Auto"
                                      ColumnSpacing="12">
                                        <Label Grid.Column="0"
                                           Text="Quantity:"
                                           TextColor="{StaticResource TextSecondaryColor}" />

                                        <HorizontalStackLayout Grid.Column="1" Spacing="6">
                                            <Button Text="-"
                                                Padding="6,0"
                                                WidthRequest="32"
                                                Command="{Binding BindingContext.DecreaseItemQuantityCommand, Source={x:Reference Name=HomePageRoot}}"
                                                CommandParameter="{Binding .}" />

                                            <Label Text="{Binding Quantity}"
                                               VerticalOptions="Center"
                                               TextColor="{StaticResource TextPrimaryColor}" />

                                            <Button Text="+"
                                                Padding="6,0"
                                                WidthRequest="32"
                                                Command="{Binding BindingContext.IncreaseItemQuantityCommand, Source={x:Reference Name=HomePageRoot}}"
                                                CommandParameter="{Binding .}" />
                                        </HorizontalStackLayout>
                                    </Grid>

                                    <!-- Item macros -->
                                    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="10" Margin="0,4,0,0">
                                        <VerticalStackLayout Grid.Column="0" Spacing="2">
                                            <Label Text="{Binding CaloriesOverride}"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextPrimaryColor}" />
                                            <Label Text="Cal"
                                               FontSize="12"
                                               TextColor="{StaticResource TextSecondaryColor}" />
                                        </VerticalStackLayout>

                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding ProteinOverride}"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextPrimaryColor}" />
                                            <Label Text="Pro"
                                               FontSize="12"
                                               TextColor="{StaticResource TextSecondaryColor}" />
                                        </VerticalStackLayout>

                                        <VerticalStackLayout Grid.Column="2" Spacing="2">
                                            <Label Text="{Binding CarbsOverride}"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextPrimaryColor}" />
                                            <Label Text="Carb"
                                               FontSize="12"
                                               TextColor="{StaticResource TextSecondaryColor}" />
                                        </VerticalStackLayout>

                                        <VerticalStackLayout Grid.Column="3" Spacing="2">
                                            <Label Text="{Binding FatOverride}"
                                               FontAttributes="Bold"
                                               TextColor="{StaticResource TextPrimaryColor}" />
                                            <Label Text="Fat"
                                               FontSize="12"
                                               TextColor="{StaticResource TextSecondaryColor}" />
                                        </VerticalStackLayout>
                                    </Grid>

                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Clear all -->
                <Button Text="Clear All Items"
                    BackgroundColor="#FFE5E5"
                    TextColor="#CC0000"
                    Command="{Binding ClearAllItemsCommand}" />


                <!-- Browse Restaurants -->
                <Button Grid.Row="3"
                    Text="Browse Restaurants"
                    FontSize="18"
                    Padding="14"
                    Command="{Binding GoToRestaurantsCommand}" />

                <!-- FatSecret Search -->
                <Button Grid.Row="4"
                    Text="Search with FatService"
                    BackgroundColor="{StaticResource InfoColor}"
                    TextColor="White"
                    FontSize="18"
                    Padding="14"
                    Command="{Binding GoToFatSecretSearchCommand}" />

            </Grid>
        </ScrollView>
</Grid>
</ContentPage>