<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FastTrak.Views.HomePage"
             Title="HomePage">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto"
          Padding="24"
          RowSpacing="20">

        <!-- App Title -->
        <VerticalStackLayout Grid.Row="0" Spacing="4">
            <Label Text="FastTrak"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}" />

            <Label Text="Track fast-food nutrition in seconds."
                   FontSize="15"
                   TextColor="{StaticResource TextSecondaryColor}" />
        </VerticalStackLayout>

        <!-- Daily Log Card -->
        <Frame Grid.Row="1"
                   Padding="18"
                   BackgroundColor="{StaticResource SurfaceColor}"
                   CornerRadius="18"
                   HasShadow="False">
            <VerticalStackLayout Spacing="6">

                <Label Text="Today's Log"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimaryColor}" />

                <Label Text="{Binding TodayItemCount, StringFormat='{0} items logged'}"
                           FontSize="15"
                           TextColor="{StaticResource InfoColor}" />
            </VerticalStackLayout>
        </Frame>

        <!-- Today's Logged Items List -->
        <CollectionView Grid.Row="2"
                            ItemsSource="{Binding TodayLoggedItems}"
                            Margin="0,10,0,0">

            <CollectionView.EmptyView>
                <Label Text="No items logged yet."
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{StaticResource TextSecondaryColor}" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="14"
                               Margin="0,8"
                               BackgroundColor="{StaticResource SurfaceColor}"
                               CornerRadius="14">

                        <VerticalStackLayout Spacing="4">
                            <!-- DisplayName works for menu + FatSecret items -->
                            <Label Text="{Binding DisplayName}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="{StaticResource TextPrimaryColor}" />

                            <Label Text="{Binding CaloriesOverride, StringFormat='Calories: {0}'}"
                                       TextColor="{StaticResource TextSecondaryColor}" />

                            <Label Text="{Binding Quantity, StringFormat='Qty: {0}'}"
                                       TextColor="{StaticResource TextSecondaryColor}" />
                        </VerticalStackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Browse Restaurants -->
        <Button Grid.Row="3"
                Text="Browse Restaurants"
                FontSize="18"
                Padding="14"
                Command="{Binding GoToRestaurantsCommand}" />

        <!-- Fat Service Search -->
        <Button Grid.Row="4"
                Text="Search with FatService"
                BackgroundColor="{StaticResource InfoColor}"
                TextColor="White"
                FontSize="18"
                Padding="14"
                Command="{Binding GoToFatSecretSearchCommand}" />

    </Grid>

</ContentPage>