<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FastTrak.ViewModels"
             x:Class="FastTrak.Views.FatSecretSearchPage"
             xmlns:services="clr-namespace:FastTrak.Services"
             x:Name="SearchFatSecretPage"
             x:DataType="vm:FatSecretSearchViewModel"
             Shell.NavBarIsVisible="True"
             Title="Food Search"
             BackgroundColor="#F8F9FA">

    <Grid RowDefinitions="Auto,*" RowSpacing="0">

        <!-- Search Header -->
        <VerticalStackLayout Grid.Row="0" 
                           Padding="20"
                           Spacing="12"
                           BackgroundColor="White">

            <Label Text="Search Foods"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1A1A1A"/>

            <Label Text="Search from thousands of foods and restaurants"
                   FontSize="14"
                   TextColor="#6B7280"/>

            <!-- Search Bar -->
            <Border BackgroundColor="#F3F4F6"
                    StrokeThickness="0"
                    Padding="0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>

                <SearchBar Placeholder="e.g., chicken breast, apple, pizza..."
                           Text="{Binding Query}"
                           SearchCommand="{Binding SearchCommand}"
                           BackgroundColor="Transparent"
                           CancelButtonColor="{StaticResource PrimaryColor}"/>
            </Border>

            <!-- Search Button -->
            <Button Text="Search"
                    Command="{Binding SearchCommand}"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="48"
                    IsEnabled="{Binding IsSearching, Converter={StaticResource InvertedBoolConverter}}">
                <Button.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="8" Offset="0,2"/>
                </Button.Shadow>
            </Button>

            <!-- Loading Indicator -->
            <HorizontalStackLayout Spacing="8" 
                                 IsVisible="{Binding IsSearching}"
                                 HorizontalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsSearching}"
                                 Color="{StaticResource PrimaryColor}"
                                 WidthRequest="20"
                                 HeightRequest="20"/>
                <Label Text="Searching..."
                       FontSize="14"
                       TextColor="#6B7280"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- Results -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="12">

                <!-- Results Header -->
                <Label Text="{Binding Results.Count, StringFormat='Found {0} results'}"
                       FontSize="14"
                       FontAttributes="Bold"
                       TextColor="#6B7280"
                       IsVisible="{Binding HasSearched}"
                       Margin="0,0,0,4"/>

                <!-- Results List -->
                <CollectionView ItemsSource="{Binding Results}">
                    <CollectionView.ItemTemplate>
    <DataTemplate x:DataType="services:FatSecretFoodSearchItem">
        <Border BackgroundColor="White"
                StrokeThickness="0"
                Padding="16"
                Margin="0,6">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="12"/>
            </Border.StrokeShape>

            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.06" Radius="6" Offset="0,2"/>
            </Border.Shadow>

            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">

                <!-- Food Name -->
                <Label Grid.Row="0"
                       Text="{Binding food_name}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#1A1A1A"
                       LineBreakMode="WordWrap"
                       MaxLines="2"/>

                <!-- Food Description -->
                <Label Grid.Row="1"
                       Text="{Binding food_description}"
                       FontSize="13"
                       TextColor="#6B7280"
                       LineBreakMode="WordWrap"
                       MaxLines="3"/>

                <!-- Add Button -->
                <Button Grid.Row="2"
                        Text="Add to Tray"
                        Command="{Binding BindingContext.AddToLogCommand,
                                   Source={x:Reference SearchFatSecretPage}}"
                        CommandParameter="{Binding .}"
                        BackgroundColor="{StaticResource AccentColor}"
                        TextColor="White"
                        FontSize="14"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        HeightRequest="40"
                        Margin="0,4,0,0"/>
            </Grid>
        </Border>
    </DataTemplate>
</CollectionView.ItemTemplate>

                    <!-- Empty View -->
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="40" 
                                           Spacing="12" 
                                           HorizontalOptions="Center"
                                           IsVisible="{Binding HasSearched}">
                            <Label Text="ðŸ”"
                                   FontSize="48"
                                   HorizontalOptions="Center"/>
                            <Label Text="No results found"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="#6B7280"/>
                            <Label Text="Try a different search term"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   TextColor="#9CA3AF"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>

                <!-- Initial State (Before Search) -->
                <VerticalStackLayout Padding="40" 
                                   Spacing="12" 
                                   HorizontalOptions="Center"
                                   IsVisible="{Binding HasSearched, Converter={StaticResource InvertedBoolConverter}}">
                    <Label Text="ðŸŽ"
                           FontSize="64"
                           HorizontalOptions="Center"/>
                    <Label Text="Search for any food"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#1A1A1A"/>
                    <Label Text="Enter a food name above to get started"
                           FontSize="14"
                           HorizontalOptions="Center"
                           TextColor="#6B7280"/>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>