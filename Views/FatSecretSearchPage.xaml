<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FastTrak.ViewModels"
             x:Class="FastTrak.Views.FatSecretSearchPage"
             x:DataType="vm:FatSecretSearchViewModel"
             Title="Food Search"
             BackgroundColor="#F8F9FA">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Entry Placeholder="Search foods..."
               Text="{Binding Query}"
               ReturnType="Search"
               Completed="SearchCompleted" />

        <Button Text="Search"
                Command="{Binding SearchCommand}"
                IsEnabled="{Binding IsSearching, Converter={StaticResource InverseBooleanConverter}}" />

        <ActivityIndicator IsRunning="{Binding IsSearching}" IsVisible="{Binding IsSearching}" />

        <Label Text="No results found"
               IsVisible="{Binding HasSearched, Converter={StaticResource BooleanToVisibilityConverter}}"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontAttributes="Italic" />

        <CollectionView ItemsSource="{Binding Results}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="White" CornerRadius="8">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding Brand}" FontSize="14" TextColor="Gray"/>
                            <Label Text="{Binding Description}" FontSize="12" TextColor="DarkGray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
