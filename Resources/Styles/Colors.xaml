<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- BRAND PALETTE -->
    <Color x:Key="PrimaryColor">#DE6B48</Color>
    <Color x:Key="SecondaryColor">#E5B181</Color>
    <Color x:Key="AccentColor">#F4B9B2</Color>
    <Color x:Key="BackgroundColor">#DAEDBD</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="InfoColor">#7DBBC3</Color>
    <Color x:Key="TextPrimaryColor">#222222</Color>
    <Color x:Key="TextSecondaryColor">#555555</Color>

    <!-- Backwards-compat aliases in case old XAML uses these keys -->
    <Color x:Key="Primary">#DE6B48</Color>
    <Color x:Key="Secondary">#E5B181</Color>
    <Color x:Key="Background">#DAEDBD</Color>
    <Color x:Key="TextPrimary">#222222</Color>
    <Color x:Key="TextSecondary">#555555</Color>

</ResourceDictionary>
