<Shell
    x:Class="FastTrak.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FastTrak.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="FastTrak">
    
    

    <TabBar>

        <!-- HOME SCREEN -->
        <ShellContent 
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage" />

        <!-- RESTAURANTS PAGE -->
        <ShellContent
            Title="Menu"
            Icon="menufood.png"
            ContentTemplate="{DataTemplate views:RestaurantsPage}"
            Route="RestaurantsPage" />

       
        <!-- CALCULATOR PAGE -->
        <ShellContent
            Title="My Tray"
            Icon="calculator.png"
            ContentTemplate="{DataTemplate views:CalculatorPage}"
            Route="CalculatorPage" />


    </TabBar>

</Shell>
